<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background_material_light</item>

    </style>

    <style name="AppTheme.Cursor" parent="AppTheme">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomActionBar" parent="AlertDialog.AppCompat.Light">
        <item name="backgroundTint">#34495E</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="spinnerDropDownItemStyle"></style>



    <style name="Value" parent="AppTheme">
        <item name="android:textColor">@color/requiredCleaningUntilValue</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="Text" parent="AppTheme">
        <item name="android:textColor">@color/fontLight</item>
        <item name="android:textSize">13dp</item>
    </style>

    <style name="ValueRow" parent="AppTheme">
        <item name="android:textColor">@color/requiredCleaningUntilValue</item>
        <item name="android:textSize">11dp</item>
    </style>

    <style name="TextRow" parent="AppTheme">
        <item name="android:textColor">@color/fontLight</item>
        <item name="android:textSize">11dp</item>
    </style>


    <style name="ListText" parent="AppTheme">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="buttonSize" parent="AppTheme">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/fontLight</item>
        <item name="colorControlActivated">@color/saveButtonColor</item>
    </style>

</resources>
